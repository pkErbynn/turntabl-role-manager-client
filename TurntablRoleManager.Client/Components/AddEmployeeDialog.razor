
@inherits AddEmployeeDialogBase

@if (ShowDialog)
{

    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="titleLabel"><strong>Add New Employee</strong></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@EmployeeModel" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary Model="@EmployeeModel" />

                        <div class="form-group">
                            <label for="firstname">First Name : </label>
                            <InputText id="firstname" class="form-control" @bind-Value="@EmployeeModel.EmployeeFirstName" placeholder="Enter firstname"></InputText>
                            <ValidationMessage For="@(() => EmployeeModel.EmployeeFirstName)" />
                        </div>
                        <div class="form-group">
                            <label for="lastname">Last Name : </label>
                            <InputText id="lastname" class="form-control" @bind-Value="@EmployeeModel.EmployeeLastName" placeholder="Enter lastname"></InputText>
                            <ValidationMessage For="@(() => EmployeeModel.EmployeeLastName)" />
                        </div>
                        <div class="form-group">
                            <label for="email">Email : </label>
                            <InputText id="email" class="form-control" @bind-Value="@EmployeeModel.EmployeeEmail" placeholder="Enter email"></InputText>
                            <ValidationMessage For="@(() => EmployeeModel.EmployeeEmail)" />
                        </div>
                        <div class="form-group">
                            <label for="address">Address : </label>
                            <InputText id="address" class="form-control" @bind-Value="@EmployeeModel.EmployeeAddress" placeholder="Enter address"></InputText>
                            <ValidationMessage For="@(() => EmployeeModel.EmployeeAddress)" />
                        </div>
                        <div class="form-group">
                            <label for="role">Role(s) : </label>
                            <select class="form-control" @bind="@SelectedRole">
                                @foreach (var role in Roles)
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            </select>
                            <ValidationMessage For="@(() => EmployeeModel.RoleGuids)" />
                        </div>

                        <div class="modal-footer">
                            <button type="submit" disabled="@DisableButton" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-secondary" @onclick="Close" data-dismiss="modal">Cancel</button>
                        </div>
                    </EditForm>

                </div>

            </div>
        </div>
    </div>

}

@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}